{
  "name": "Drupal",
  "description": "Drupal site",
  "type": "project",
  "authors": [
    {
      "name": "Xiukun zhou",
      "email": "zhouitpro@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    }
  ],
  "require": {
    "composer/installers": "~1.0",
    "derhasi/composer-preserve-paths": "0.1.*",
    "drush/drush": "^8.1",
    "drupal/drupal": "7.50.0",
    "drupal/libraries": "7.2.3",
    "drupal/module_filter": "7.2.0",
    "drupal/devel": "7.1.5",
    "drupal/views": "7.3.14",
    "drupal/ctools": "^7.1"
  },
  "conflict": {
    "drupal/core": "8.*"
  },
  "config": {
    "vendor-dir": "web/vendor"
  },
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/": [
        "type:drupal-core"
      ],
      "web/sites/all/modules/contrib/{$name}/": [
        "type:drupal-module"
      ],
      "web/sites/all/themes/contrib/{$name}/": [
        "type:drupal-theme"
      ],
      "web/sites/all/libraries/{$name}/": [
        "type:drupal-library"
      ],
      "web/sites/all/drush/{$name}/": [
        "type:drupal-drush"
      ],
      "web/profiles/{$name}/": [
        "type:drupal-profile"
      ]
    },
    "preserve-paths": [
      "web/vendor",
      "web/sites",
      "web/profiles/.gitignore",
      "web/profiles/olm"
    ]
  },
  "scripts": {
    "post-install-cmd": []
  },
  "require-dev": {
  }
}
